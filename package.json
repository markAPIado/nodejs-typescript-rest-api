{
  "name": "nodejs-typescript-rest-api",
  "version": "1.0.0",
  "description": "A simple NodeJS REST API using TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx nodemon",
    "build": "rimraf ./dist && tsc",
    "build:local": "rimraf ./dist && npm run lint && tsc",
    "build:docker-dev": "docker-compose -f docker-compose.dev.yml up",
    "build:docker-prod": "npm run build:local && docker-compose -f docker-compose.prod.yml up --build -d",
    "build:docker-cluster": "npm run build:local && docker-compose -f docker-compose.prodcluster.yml up --build -d",
    "start": "node dist/index.js",
    "clean": "rimraf ./dist && rimraf ./coverage && rimraf ./logs && rimraf ./node_modules",
    "local:pre-commit": "prettier --config .prettierrc . --write && eslint .",
    "lint": "run-script-os",
    "lint:win32": "eslint \"./src/**/*.ts\"",
    "lint:darwin:linux": "eslint 'src/**/*.ts'",
    "lint:default": "eslint 'src/**/*.ts'",
    "lint-fix": "run-script-os",
    "lint-fix:win32": "eslint \"./src/**/*.ts\" --fix",
    "lint-fix:darwin:linux": "eslint 'src/**/*.ts' --fix",
    "lint-fix:default": "eslint 'src/**/*.ts' --fix",
    "format": "run-script-os",
    "format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "format-check": "run-script-os",
    "format-check:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --check",
    "format-check:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --check",
    "format-check:default": "prettier --config .prettierrc 'src/**/*.ts' --check",
    "test": "jest --setupFiles dotenv/config --detectOpenHandles",
    "test:watch": "jest --watchAll --detectOpenHandles --verbose",
    "test:coverage": "jest --coverage --detectOpenHandles --watchAll",
    "husky:prepare": "husky install",
    "cluster:start": "pm2 start ecosystem.config.js",
    "cluster:stop": "pm2 stop ecosystem.config.js",
    "cluster:restart": "pm2 restart ecosystem.config.js",
    "cluster:delete": "pm2 delete ecosystem.config.js",
    "cluster:logs": "pm2 logs ecosystem.config.js --lines 100",
    "cluster:logs:err": "pm2 logs ecosystem.config.js --lines 100 --err"
  },
  "author": "Mark Apiado",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint",
      "pre-push": "npm test"
    }
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/compression": "^1.7.3",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/lodash": "^4.14.199",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.7.1",
    "@types/supertest": "^2.0.13",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "npm": "^10.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "run-script-os": "^1.1.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^7.5.3",
    "morgan": "^1.10.0",
    "pm2": "^5.3.0",
    "winston": "^3.10.0",
    "winston-mongodb": "^5.1.1",
    "zod": "^3.22.4"
  }
}
